{% extends 'base.html.twig' %}

{% block title %}Matchs du tournoi{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Matchs du tournoi : {{ tournament.name }}</h1>
        <p><strong>Lieu :</strong> {{ tournament.location }}</p>
        <p><strong>Date :</strong> {{ tournament.date|date('d/m/Y H:i') }}</p>

        <hr>

        <h2>Liste des matchs ({{ matches|length }})</h2>

        {% if matches is empty %}
            <div class="alert alert-info">Aucun match n’a encore été enregistré pour ce tournoi.</div>
        {% else %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Joueur 1</th>
                        <th>Joueur 2</th>
                        <th>Statut</th>
                        <th>Score</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for match in matches %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ match.player1.email }}</td>
                            <td>{{ match.player2.email }}</td>
                            <td>{{ match.status }}</td>
                            <td>{{ match.score1 }} - {{ match.score2 }}</td>
                            <td>
                                
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}